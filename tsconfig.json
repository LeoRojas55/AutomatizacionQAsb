{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",

    "types": ["node", "@playwright/test"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "playwright.config.ts",
    "tests/**/*.ts",
    "pages/**/*.ts",
    "utils/**/*.ts"
  ]
}
